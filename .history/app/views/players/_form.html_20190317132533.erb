<%= form_with(model: team, local: true) do |form| %>
    <% if team.errors.any? %>
    <div id="error_explanation">
    <h2>Kļūdas saglabājot:<h2/>

    <ul>
    <% team.errors.full_messages.each do |message| %>
       <li><%= message %>
    <% end %>
    </ul>
    </div>
    <% end %>

    <div class="field">
       <%= form.label :title, "Komandas nosaukums" %>
       <%= form.text_field :title %>
    </div>

    <div class="field">
       <%= form.label :code, "Komandas saīsinājums" %>
       <%= form.text_field :code %>
    </div>

       <div class="actions">
          <%= form.submit 'Saglabāt' %>
       </div>
    <% end %>